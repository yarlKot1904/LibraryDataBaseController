@model Library.Models.Book

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewBag.Title = "Изменить книгу";
}

<h2>Изменить книгу</h2>

@using (Html.BeginForm("Edit", "Books", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Id)

    <div>
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div>
        @Html.LabelFor(m => m.Amount)
        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", type = "number" })
    </div>

    <div>
        @Html.LabelFor(m => m.TypeId, "Тип книги")
        @Html.DropDownListFor(m => m.TypeId, (SelectList)ViewBag.Types, "Выберите тип", new { @class = "form-control" })
    </div>

    <div>
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        @Html.ActionLink("Назад к списку", "Index")
    </div>
}
