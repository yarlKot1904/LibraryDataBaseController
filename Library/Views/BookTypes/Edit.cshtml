@model Library.Models.BookType

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewBag.Title = "Изменить тип книги";
}

<h2>Изменить тип книги</h2>

@using (Html.BeginForm("Edit", "BookTypes", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Id)

    <div>
        @Html.LabelFor(m => m.Type)
        @Html.TextBoxFor(m => m.Type, new { @class = "form-control" })
    </div>

    <div>
        @Html.LabelFor(m => m.Fine)
        @Html.TextBoxFor(m => m.Fine, new { @class = "form-control", type = "number" })
    </div>

    <div>
        @Html.LabelFor(m => m.MaxDays)
        @Html.TextBoxFor(m => m.MaxDays, new { @class = "form-control", type = "number" })
    </div>

    <div>
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        @Html.ActionLink("Назад к списку", "Index")
    </div>
}
